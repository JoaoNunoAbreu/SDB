version: "3.3"
services:
  elastic:
    image: docker.elastic.co/elasticsearch/elasticsearch:7.10.2
    restart: always
    ports:
      - '9200:9200'
      - '9300:9300'
    environment:
      - discovery.type=single-node
  kibana:
    image: docker.elastic.co/kibana/kibana:7.10.2
    restart: always
    ports:
      - '{{ kibana_port }}:5601'
    links:
      - elastic:elasticsearch
